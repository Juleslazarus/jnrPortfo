mixins 

// fonts import
@mixin fonts {
  @import url("https://fonts.googleapis.com/css2?family=Kaushan+Script&family=Open+Sans&family=Xanh+Mono&display=swap");
}

//global rules
@mixin global {
  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }
}
// function for creating grid layouts quickly
@mixin display($g, $gtc, $gtr, $jc, $ai, $h, $w) {
  display: $g;
  grid-template-columns: repeat($gtc, auto);
  grid-template-rows: repeat($gtr, auto);
  justify-content: $jc;
  align-items: $ai;
  height: $height;
  width: $width;
}

// variables for the website styling
$primary-color: white;
$secondary-color: rgb(233, 233, 233);
$accent-color: rgb(51, 105, 255);
